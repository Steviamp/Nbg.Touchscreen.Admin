@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using MudBlazor
@using Nbg.Touchscreen.Admin.Data
@inject AppDbContext Db
@inject ISnackbar Snackbar
@attribute [Authorize]

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField @bind-Value="_name"
                          Label="Queue name"
                          Required="true"
                          Variant="Variant.Outlined" />

            <MudTextField @bind-Value="_serviceType"
                          Label="Service Type"
                          MaxLength="20"
                          Required="true"
                          Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@(() => DialogInstance?.Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="_saving">
            @if (_saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Create
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? DialogInstance { get; set; }

    private MudForm? _form;
    private string _name = string.Empty;
    private string? _serviceType = string.Empty;
    private bool _isActive = true;
    private bool _saving;

    // Δεν χρειάζεται πλέον OnInitializedAsync/Db.Services

    private async Task Save()
    {
        // Lightweight validation
        if (string.IsNullOrWhiteSpace(_name))
        { Snackbar.Add("Name required", Severity.Error); return; }

        if (string.IsNullOrWhiteSpace(_serviceType))
        { Snackbar.Add("Service Type required", Severity.Error); return; }

        if (_serviceType!.Length > 20)
        { Snackbar.Add("Service Type must be ≤ 20 chars.", Severity.Error); return; }

        _saving = true;
        try
        {
            var ent = new Queue
            {
                Name = _name.Trim(),
                ServiceType = _serviceType.Trim(),
                IsActive = _isActive,
                CreatedAtUtc = DateTime.UtcNow
            };

            Db.Queues.Add(ent);
            await Db.SaveChangesAsync();
            DialogInstance?.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error creating queue: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }
}